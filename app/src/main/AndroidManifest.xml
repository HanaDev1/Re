    package="remoty.internship.wadimakkah.remotyapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <activity android:name="activity.DesignerSignUpActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="activity.ProductTrackActivity" />
        <activity android:name="activity.DesignerHomeActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="activity.ResetPassActivity" />
        <activity android:name="activity.UserHomeActivity" />
        <activity android:name="activity.PassResetActivity" />
        <activity android:name="activity.DesignersDetailActivity" />
        <activity android:name=".ShowProjectDetails" />
        <activity android:name="activity.DesignerSignInActivity" />
        <activity android:name="activity.UserRequestActivity" />
        <activity android:name=".ProductDetailsAcvivity"></activity>
    </application>

</manifest>