<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.ProductDetailsActivity"
    android:orientation="vertical"
    android:id="@+id/relative">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_nameDetails"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="@font/titlefont"
        android:layout_marginLeft="16dp"
        android:id="@+id/titleView"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prodName"
        android:text="name"
        android:fontFamily="@font/titlefont"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_detailsD"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/titlefont"
        android:layout_marginLeft="20dp"
        android:textAllCaps="true"
        android:id="@+id/titleView2"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deadline"
        android:text="details"
        android:fontFamily="@font/subtitlefont"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/accept"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/mainbutton"
        android:id="@+id/acceptPro"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/reject"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/mainbutton"
        android:id="@+id/rejectPro"/>
    </LinearLayout>

</LinearLayout>