<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.ProductDetailsActivity"
    android:orientation="vertical"
    android:id="@+id/relative">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_nameDetails"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="@font/titlefont"
        android:layout_marginLeft="20dp"
        android:textAllCaps="true"
        android:id="@+id/titleView"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prodName"
        android:text="name"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="@font/subtitlefont"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textStyle="bold"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_detailsD"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="@font/titlefont"
        android:layout_marginLeft="20dp"
        android:textAllCaps="true"
        android:id="@+id/titleView2"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deadline"
        android:text="details"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="@font/subtitlefont"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="100dp">
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_n"
        android:id="@+id/acceptPro"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Reject"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/button_n"
        android:id="@+id/rejectPro"/>
    </RelativeLayout>

</LinearLayout>