<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@drawable/applicationbackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remoty"
        android:paddingBottom="1dp"
        android:fontFamily="@font/remotymaintitle"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text"
        android:textAllCaps="true"
        android:paddingBottom="26dp"
        android:paddingTop="20dp"
        android:fontFamily="@font/remotymaintitle"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/signUpbuttondesigner"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/SignUpDesignerBtn1"
        android:fontFamily="@font/titlefont"
        android:background="@drawable/button_n"/>

    <Button
        android:id="@+id/signUpUserBtn2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/signUpbuttonuser"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/titlefont"
        android:background="@drawable/button_n"
        android:layout_marginRight="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/tosignPage"
        android:paddingTop="20dp"
        android:id="@+id/toSignInPage"
        android:fontFamily="@font/titlefont"/>
</LinearLayout>