<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.DesignerSignInActivity"
    android:background="@drawable/lightback">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="100dp">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logov_v2"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="36dp"
        android:layout_marginTop="100dp">

        <EditText
            android:id="@+id/nameDesignerEditText"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center_horizontal"
            android:background="#FFF"
            android:fontFamily="@font/titlefont"
            android:hint="@string/signFullNameEdit"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailDesignerEditText"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/titlefont"
            android:hint="@string/signEmailEdit"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="#fff"/>

        <EditText
            android:id="@+id/passDesignerEditText"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/titlefont"
            android:hint="@string/signPasswordEdit"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="#fff"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:checked="true"
                    android:text="@string/user"
                    style="@style/EditText"
                    android:textSize="24dp"
                    android:buttonTint="@color/primary"/>

                <RadioButton
                    android:id="@+id/freeLance_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:buttonTint="@color/primary"
                    android:text="@string/freelancer_company"
                    style="@style/EditText"
                    android:textSize="24dp"/>

            </RadioGroup>


        </LinearLayout>


        <EditText
            android:id="@+id/DesignerDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/designer_desc"
            android:backgroundTint="@color/buttonColor"
            android:fontFamily="@font/titlefont"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            />


        <Button
            android:id="@+id/DesignerSignUpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_n"
            android:text="@string/signUpbutton"
            android:textColor="@color/black"
            android:textSize="24dp"/>


        <TextView
            android:id="@+id/toSignInPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="30dp"
            android:paddingTop="20dp"
            android:text="@string/tosignPage"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="end"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>