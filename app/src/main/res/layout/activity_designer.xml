<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.DesignerSignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/titlefont"
            android:textStyle="normal"
            android:layout_marginTop="30dp"/>
        <EditText
            android:id="@+id/nameDesignerEditText"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#FFF"
            android:fontFamily="@font/titlefont"
            android:hint="@string/signFullNameEdit"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/emailDesignerEditText"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/titlefont"
            android:hint="@string/signEmailEdit"
            android:background="#fff"/>

        <EditText
            android:id="@+id/passDesignerEditText"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/titlefont"
            android:hint="@string/signPasswordEdit"
            android:inputType="textPassword"
            android:background="#fff"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal"
                android:focusable="true">

                <RadioButton
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/user"
                    style="@style/EditText"
                    android:textSize="16sp"
                    android:buttonTint="@color/primary"/>

                <RadioButton
                    android:id="@+id/freeLance_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:buttonTint="@color/primary"
                    android:text="@string/freelancer_company"
                    style="@style/EditText"
                    android:textSize="16sp"/>

            </RadioGroup>

        </LinearLayout>

        <EditText
            android:id="@+id/DesignerDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/designer_desc"
            android:backgroundTint="@color/buttonColor"
            android:fontFamily="@font/titlefont"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/DesignerSignUpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_n"
            android:text="@string/signUpbutton"
            android:textColor="@color/black"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/toSignInPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="30dp"
            android:text="@string/tosignPage"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_gravity="end"/>
    </LinearLayout>

</ScrollView>