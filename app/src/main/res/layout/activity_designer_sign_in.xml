<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.DesignerSignInActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/titlefont"
                android:textStyle="normal"
                android:layout_marginTop="30dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emailDesignerEditText"
                android:hint="@string/signEmailEdit"
                android:fontFamily="@font/titlefont"
                style="@style/EditText"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:layout_marginTop="16dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passDesignerEditText"
                android:hint="@string/signPasswordEdit"
                android:inputType="textPassword"
                android:fontFamily="@font/titlefont"
                style="@style/EditText"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resetPass"
                android:text="@string/forgetPass"
                style="@style/EditText"
                android:textSize="13sp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DesignerSignInBtn"
                android:text="@string/signInbutton"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/button_n"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toSignUp2"
                    android:text="Create a new account ?"
                    style="@style/EditText"
                    android:gravity="center_horizontal"
                    android:textSize="13sp"
                    android:layout_weight="1"
                   />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
